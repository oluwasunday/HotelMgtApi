@page "/ResetPassword"
@model HotelMgt.API.Pages.ResetPasswordModel
@{
}

<!DOCTYPE html>
<html>
	<head>
		<meta />
		<title>Reset Password</title>
	</head>
	<body>
		<div style="width:90%; height:200px; border: 1px solid #808080; margin:auto; border-radius:10px; background-color:#e1e1e1;">
			<div style="margin:auto; align-content:center; width:fit-content;">
				<h1 style="text-align:center">Reset your password</h1>
				<form action="/api/auth/resetpassword" method="post">
					<input type="hidden" name="Token" value="@Request.Query["Token"]" />
					<input type="hidden" name="Email" value="@Request.Query["Email"]" />
					<table>
						<tr>
							<td>
								New Password
							</td>
							<td>
								<input type="password" name="NewPassword" />
							</td>
						</tr>
						<tr>
							<td>
								Confirm Password
							</td>
							<td>
								<input type="password" name="ConfirmPassword" />
							</td>
						</tr>
						<tr>
							<td colspan="2">
								<input type="submit" value="Reset" style="width:100%; margin-top:15px; padding-top:5px; padding-bottom:5px;" />
							</td>
						</tr>
					</table>
				</form>
			</div>
			
		</div>
		
	</body>
</html>